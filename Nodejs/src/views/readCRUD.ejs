<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Read CRUD</title>
    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css">

    <!-- jQuery library -->
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.6.3/dist/jquery.slim.min.js"></script>

    <!-- Popper JS -->
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>

    <!-- Latest compiled JavaScript -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script>
</head>

<style>
    .btn {
        display: flex;
    }

    .btn-edit {
        background-color: orange;
        outline: none;
        border: none;
        border-radius: 5px;
        margin: 0 10px;
        cursor: pointer;
    }

    .btn-delete {
        background-color: rgb(235, 18, 15);
        outline: none;
        border: none;
        border-radius: 5px;
        margin: 0 10px;
        cursor: pointer;
    }
</style>

<body>
    <div>Chào Nguyễn Đạt đến với hàm read Data</div>
    <table class="table">
        <thead class="thead-dark">
            <tr>
                <th scope="col">id</th>
                <th scope="col">Email</th>
                <th scope="col">Password</th>
                <th scope="col">First Name</th>
                <th scope="col">Last Name</th>
                <th scope="col">Address</th>
                <th scope="col">Gender</th>
                <th scope="col">Role</th>
                <th scope="col">Phone Number</th>
                <th scope="col">Action</th>
        </thead>
        <tbody>
            <% for(let i=0; i < dataTable.length; i++) { %>
                <tr>
                    <td>
                        <%= dataTable[i].id %>
                    </td>
                    <td>
                        <%= dataTable[i].email %>
                    </td>
                    <td>
                        <%= dataTable[i].password %>
                    </td>
                    <td>
                        <%= dataTable[i].firstName %>
                    </td>
                    <td>
                        <%= dataTable[i].lastName %>
                    </td>
                    <td>
                        <%= dataTable[i].address %>
                    </td>
                    <td>
                        <%= dataTable[i].gender %>
                    </td>
                    <td>
                        <%= dataTable[i].roleId %>
                    </td>
                    <td>
                        <%= dataTable[i].phonenumber %>
                    </td>
                    <td class="btn">
                        <a href="/edit-crud?id=<%= dataTable[i].id %>" class="btn-edit" type="button">Edit</a>
                        <a href="/delete-crud?id=<%= dataTable[i].id %>" class="btn-delete" type="button">Delete</a>
                    </td>
                </tr>
                <% } %>
        </tbody>
    </table>
</body>

</html>